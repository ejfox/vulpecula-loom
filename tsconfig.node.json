{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "electron/**/*",
    "src/types.ts",
    "src/types/*.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
