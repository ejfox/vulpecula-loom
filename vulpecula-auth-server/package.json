    "postgres": "^3.4.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21"
  },
  "devDependencies": {
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "drizzle-kit": "^0.28.1",
    "@types/node": "^22.8.6"
  }
}